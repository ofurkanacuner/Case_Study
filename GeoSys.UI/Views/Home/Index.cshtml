@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center">
    <h1 class="display-4">Vitrin</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4 border">
            <ul>
                @foreach (var item in (List<CategoriesViewModel>)TempData["Categories"])
                {
                    <li class="border-bottom">@item.Title</li>
                }
            </ul>
        </div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-4">
                    @foreach (var item in (List<ProductsViewModel>)TempData["Products"])
                    {
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <p class="card-text">Kategori : @item.CategoriTitle</p>
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">Fiyat : @item.Price ₺</p>
                                <a href="#" class="btn btn-primary">İncele</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>